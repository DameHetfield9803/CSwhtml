@model Movie;

<div class="container">

    <div class="my-3">
        <h2>Edit Movie</h2>
    </div>

    <form asp-controller="Movie"
          asp-action="EditMovie"
          method="post">

        <input asp-for="MovieId" hidden />

        <div class="col-md-6 mb-3 form-floating">
            <input asp-for="Title" class="form-control"
                   placeholder="Title" />
            <label asp-for="Title">Title</label>
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="col-md-4 mb-3 form-floating">
            <input asp-for="ReleaseDate" class="form-control"
                   placeholder="ReleaseDate" />
            <label asp-for="ReleaseDate">Release Date</label>
            <span asp-validation-for="ReleaseDate" class="text-danger"></span>
        </div>

        <div class="col-md-3 mb-3 form-floating">
            <input asp-for="Price" class="form-control"
                   placeholder="Price" />
            <label asp-for="Price">Price ($)</label>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>

        <div class="col-md-3 mb-3 form-floating">
            <input asp-for="Duration" class="form-control"
                   placeholder="Duration" />
            <label asp-for="Duration">Duration (min)</label>
            <span asp-validation-for="Duration" class="text-danger"></span>
        </div>

        <div class="col-md-3 mb-3 form-floating">
            <input asp-for="Rating" class="form-control"
                   placeholder="Rating" />
            <label asp-for="Rating">Rating</label>
            <span asp-validation-for="Rating" class="text-danger"></span>
        </div>

        <div class="col-md-3 mb-3 form-floating">
            <select class="form-select" asp-for="GenreId">
                @foreach (var item in (SelectList)ViewData["Genres"]!)
                {
                    <option value="@item.Value">@item.Text</option>
                }
            </select>
            <label asp-for="GenreId">Genre</label>
            <span asp-validation-for="GenreId" class="text-danger"></span>
        </div>

        <div class="col-auto mb-3">
            <button class="btn btn-primary" type="submit">Save</button>
        </div>

        @if (ViewData["Message"] != null)
        {
            <div class="form-group row">
                <div class="col-6">
                    <div class="alert alert-@ViewData["MsgType"]">
                        <b>Message: </b>@ViewData["Message"]<br />
                        @if (!String.IsNullOrEmpty(ViewData["ExecSQL"]?.ToString()))
                        {
                            <b>SQL: </b>

                            @ViewData["ExecSQL"]?.ToString()
                        }
                    </div>
                </div>
            </div>
        }

    </form>
</div>
